<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:background="@color/colorAccent"
            android:src="@drawable/default_icon" />

        <Button
            android:id="@+id/nav_downloaded"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_50"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_10"
            android:background="@null"
            android:drawableLeft="@drawable/ic_nav_menu_downloaded"
            android:drawablePadding="@dimen/margin_40"
            android:fontFamily="@string/roboto_regular"
            android:text="@string/nav_title_mark"
            android:textAllCaps="false"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_17" />

        <Button
            android:id="@+id/nav_share"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_50"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_10"
            android:background="@null"
            android:drawableLeft="@drawable/ic_nav_menu_share"
            android:drawablePadding="@dimen/margin_40"
            android:fontFamily="@string/roboto_regular"
            android:text="@string/nav_title_share"
            android:textAllCaps="false"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_17" />

        <Button
            android:id="@+id/nav_rate_us"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_50"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_10"
            android:background="@null"
            android:drawableLeft="@drawable/ic_nav_menu_rate"
            android:drawablePadding="@dimen/margin_40"
            android:fontFamily="@string/roboto_regular"
            android:text="@string/nav_title_rate_us"
            android:textAllCaps="false"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_17" />
    </LinearLayout>
</RelativeLayout>